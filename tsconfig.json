{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [],
    "baseUrl": ".",
    "paths": {},
    "declaration": true,
    "outDir": "build",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
